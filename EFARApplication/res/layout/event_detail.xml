<?xml version="1.0" encoding="UTF-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
    android:background="@drawable/welcome" >
    
    <TextView
        android:id="@+id/sender_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize = "20sp"/>
    
	<TextView
        android:id="@+id/send_time"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below ="@+id/sender_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize = "20sp"/>
	
	<TextView
        android:id="@+id/address_tag"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below ="@+id/send_time"
        android:layout_marginTop="5dp"
        android:textSize = "20sp"/>
	
	<TextView
        android:id="@+id/body"
        android:layout_height="300dp"
        android:layout_width="fill_parent"
        android:layout_below ="@+id/address_tag"
        android:layout_marginTop="5dp"
        android:textSize = "20sp"/>
	<Button
	    android:id="@+id/all_contacts"
	    android:layout_below="@+id/body"
	    android:layout_height="70dp"
        android:layout_width="100dp"
        android:text="@string/all_contacts"
	 />
	
	<Button
	    android:id="@+id/search_contacts"
	    android:layout_toRightOf="@+id/all_contacts"
	    android:layout_height="70dp"
        android:layout_width="100dp"
        android:layout_below="@+id/body"
        android:text="@string/search_contacts"
	 />
	
	<Button
	    android:id="@+id/done_indetail"
	     android:layout_toRightOf="@+id/search_contacts"
	    android:layout_height="70dp"
        android:layout_width="100dp"
        android:layout_below="@+id/body"
        android:text="@string/done_indetail"
	 />

</RelativeLayout>