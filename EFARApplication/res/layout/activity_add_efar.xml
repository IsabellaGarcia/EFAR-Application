<?xml version= "1.0" encoding ="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width= "match_parent"
    android:layout_height= "match_parent"
    android:background= "@drawable/background" >

    <RelativeLayout
        android:layout_width= "match_parent"
    	android:layout_height= "match_parent"
    	android:padding="120dp"
    	android:layout_centerInParent="true" >
    <TextView
        android:id="@+id/text_efar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/lightBrown"
        android:textSize="30sp"
        android:text="    Name:" />

    <TextView
        android:id="@+id/text_efar_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/text_efar_name"
        android:layout_below="@+id/text_efar_name"
        android:layout_marginTop="50dp"
        android:textColor="@color/lightBrown"
        android:textSize="30sp"
        android:text="Phone:" />
   
    <TextView
        android:id="@+id/text_address_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/text_efar_phone"
        android:layout_below="@+id/text_efar_phone"
        android:layout_marginTop="50dp"
        android:textColor="@color/lightBrown"
        android:textSize="30sp"
        android:text="Address:" />
    
    <TextView
        android:id="@+id/text_time_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/text_efar_phone"
        android:layout_below="@+id/text_address_tag"
        android:layout_marginTop="50dp"
        android:textColor="@color/lightBrown"
        android:textSize="30sp"
        android:text="Time:" />
    
    <TextView
        android:id="@+id/text_skill_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/text_efar_phone"
        android:layout_below="@+id/text_time_available"
        android:layout_marginTop="50dp"
        android:textColor="@color/lightBrown"
        android:textSize="30sp"
        android:text="Skill:" />

    <EditText
        android:id="@+id/edittext_efar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_efar_name"
        android:layout_toRightOf="@+id/text_efar_name"
        android:layout_marginLeft="10dp"
        android:textColorHint="@color/lightGray_tm"
        android:ems="12"
        android:singleLine="true"
        android:textColor="@color/halfGray" />

    <EditText
        android:id="@+id/edittext_efar_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_efar_phone"
        android:layout_alignLeft="@+id/edittext_efar_name"
        android:layout_marginLeft="10dp"
        android:textColorHint="@color/lightGray_tm"
        android:ems="12"
        android:singleLine="true"
        android:inputType="phone"
        android:textColor="@color/halfGray" />

    <EditText
        android:id="@+id/edittext_address_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_address_tag"
        android:layout_alignLeft="@+id/edittext_efar_name"
        android:layout_marginLeft="10dp"
        android:textColorHint="@color/lightGray_tm"
        android:ems="12"
        android:singleLine="true"
        android:textColor="@color/halfGray" />
    
    <EditText
        android:id="@+id/edittext_time_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_time_available"
        android:layout_alignLeft="@+id/edittext_efar_name"
        android:layout_marginLeft="10dp"
        android:textColorHint="@color/lightGray_tm"
        android:ems="12"
        android:singleLine="true"
        android:textColor="@color/halfGray" />
    
    <EditText
        android:id="@+id/edittext_skill_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_skill_tag"
        android:layout_alignLeft="@+id/edittext_efar_name"
        android:layout_marginLeft="10dp"
        android:textColorHint="@color/lightGray_tm"
        android:ems="12"
        android:singleLine="true"
        android:textColor="@color/halfGray" />

    <Button
        style="@style/Button"
        android:id="@+id/button_add_efar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="@string/button_add" />
	</RelativeLayout>

</RelativeLayout>
